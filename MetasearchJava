<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MetaSearch</title>
    <script>
        function metaSearch() {
            let query = document.getElementById('query').value;
            let googleURL = `https://www.google.com/search?q=${query}`;
            let bingURL = `https://www.bing.com/search?q=${query}`;
            let duckduckgoURL = `https://duckduckgo.com/?q=${query}`;
            let baiduURL = `https://www.baidu.com/s?wd=${query}`;
            let yandexURL = `https://yandex.com/search/?text=${query}`;
            let ecosiaURL = `https://www.ecosia.org/search?q=${query}`;
            let yahooURL =
`https://search.yahoo.com/search?p=${query}`;


            window.open(googleURL, '_blank');
            window.open(bingURL, '_blank');
            window.open(duckduckgoURL, '_blank');
            window.open(baiduURL, '_blank');
            window.open(yandexURL, '_blank');
            window.open(ecosiaURL, '_blank');
            window.open(yahooURL, '_blank');
        }
    </script>
</head>
<body>
    <h1>MetaSearcher</h1>
    <input type="text" id="query" placeholder="Enter your search query">
    <button onclick="metaSearch()">Search</button>
</body>
</html>
